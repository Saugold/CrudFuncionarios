@model SodreModel
@{
	ViewData["title"] = "Cadastrar Funcionario";

}
<div>
    
<form method="post" asp-controller="Funcionarios" asp-action="Cadastrar">
    <div class="mb-3">
        <label for="Nome" class="form-label">Nome</label>
        <input type="text" class="form-control" asp-for="Nome" id="Nome" placeholder="Nome do Funcionario">
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="Cargo" class="form-label">Cargo</label>
        <select class="form-select" asp-for="IdCargo">
            
            <option selected>Selecione o Cargo</option>
            <option value="1">Analista de Sistemas</option>
            <option value="2">Administrador</option>
            <option value="3">Gestor</option>
        </select>
            <span class="text-danger">Escolha o cargo do funcionario</span>
    </div>
        <div class="mb-3">
            <label for="Salario" class="form-label">Remuneração</label>
            <input type="number" asp-for="Salario" step="0.01" min="0" class="form-control"  id="Salario" placeholder="Remuneração">
            <span  class="text-danger">Digite a remuneração do funcionario</span>
        </div>
        <div class="d-flex gap-5 mt-5">
			<button type="submit" class="btn btn-primary">Cadastrar</button>
            <a class="btn btn-warning" asp-action="Index"> Voltar </a>
        </div>
    
</form>
</div>